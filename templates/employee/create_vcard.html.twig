{% extends 'base.html.twig' %}

{% block title %}Créer une VCard{% endblock %}

{% block body %}
    <h1 class="h2 md title-header"><a href="{{ path('app.employee.show', {id: employee.id}) }}" class="btn-back"> <i data-feather="chevron-left"></i></a> Nouvelle carte virtuelle de {{ employee }}</h1>
    <div class="card-md p3">
        {{ form_start(form) }}
        <section class="stack-large">
            <section class="stack">
                <div class="grid">
                    {{ form_row(form.nameDisplayType) }}
                    {{ form_row(form.phoneNumber) }}
                </div>
                <div class="stack">
                    {{ form_row(form.email) }}
                </div>
                <div class="hstack">
                    {{ form_row(form.displayRank) }}
                    {{ form_row(form.displayRole) }}
                </div>
            </section>
            <section>
                <button type="submit" class="btn-gradient">Télécharger</button>
            </section>
        </section>
        {{ form_end(form) }}
    </div>

{% endblock %}
