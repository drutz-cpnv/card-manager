<div class="card p3">
    {{ form_start(form) }}
    <section class="stack-large">
        <section>
            <div class="grid">
                {{ form_row(form.rank) }}
                {{ form_row(form.firstname) }}
                {{ form_row(form.lastname) }}
                {{ form_row(form.birthdate) }}
                {{ form_row(form.gender) }}
                {{ form_row(form.role) }}
                {{ form_row(form.phone_number) }}
                {{ form_row(form.email) }}
                {{ form_row(form.pictureFile) }}
                {{ form_row(form.badge_number) }}
                {{ form_row(form.isPolice) }}
            </div>
        </section>
        <section>
            <button type="submit" class="btn-gradient">{{ button_label|default('Enregistrer') }}</button>
        </section>
    </section>
    {{ form_end(form) }}
</div>
